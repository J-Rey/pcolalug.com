{% extends "layout.jinja2" %}
{% block content %}
<h1>Admin</h1>
<div class="admin">
<table>
<tr>
  <th>Username</th>
  <th>First Name</th>
  <th>Last Name</th>
  <th>Email</th>
  <th>Activated?</th>
  <th>Actions</th>
</tr>
{% for user in users %}
  <tr>
    <td>
      <a href="{{ request.route_url('profile', user_pk=user.pk) }}">{{ user.username }}</a>
    </td>
    <td>
      {{ user.first_name }}
    </td>
    <td>
      {{ user.last_name }}
    </td>
    <td>
      {{ user.email }}
    </td>
    <td>
      {{ user.activated }}
    </td>
    <td>
      {% if user.activated == False %}
        <a href="{{ request.route_url('activate', user_pk=user.pk, code=user.activation.code) }}">Activate</a>
      {% endif %}
    </td>
  </tr>
{% endfor %}
</table>
</div>
{% endblock %}
